[Unit]
Description=OmniMind MCP Servers (Fase 2: Após 30s)
After=network.target mind.service
Requires=mind.service

[Service]
Slice=mind.slice
OOMScoreAdjust=-1000
Type=simple
User=root
WorkingDirectory=/home/fahbrain/projects/omnimind
EnvironmentFile=/home/fahbrain/projects/omnimind/.env
# Aguardar 30s após serviços essenciais iniciarem
ExecStartPre=/bin/sleep 30
ExecStart=/home/fahbrain/projects/omnimind/scripts/start_mcp_servers.sh
ExecStop=/usr/bin/pkill -f mcp
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
