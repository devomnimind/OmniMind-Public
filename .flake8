[flake8]
max-line-length = 100
extend-ignore = E203, W503

# Exclude large/third-party and virtualenv folders
exclude =
    .git,
    __pycache__,
    .venv,
    tmp_agents,
    tmp_tools,
    tests/legacy,
    DEVBRAIN_V23,
    third_party,
    archive,
    backups_compressed,
    data,
    venv,
    src/agents/react_agent_broken.py,
    src/agents/react_agent.py.backup,
    src/integrations,
    src/onboarding,
    */sympy/*,
    scripts,
    models,
    docs,
    deploy,
    .vscode,
    web/frontend/node_modules,
    node_modules,
    web,
    scripts/.archive,
    scripts/archive,
    scripts/deprecated,
    src/backup,
    deprecated,
    .archive

# Many scripts intentionally modify sys.path before imports; allow E402 in scripts and web
per-file-ignores =
    src/consciousness/*:E501
